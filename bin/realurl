#!/usr/bin/env node

process.title = 'realurl';

require("copy-paste");
var realurl	= require('../lib');
var input 	= process.argv;
var url 	= input[2];

console.log("\nRetrieving the real url for: " + url);

realurl.get(url, function(result, error) {
  if(error) {
    console.error(result);
    process.exit(1);
  }
  else {
  	copy(result);
    console.log("\nReal URL location:");
    console.log(result);
  }
});
